# Supabase (Cloud dev project)
# Use a dedicated DEV project, not production.
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-dev-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-dev-service-role-key

# Admin bootstrap (dev)
# Rotate these before any bootstrap in shared/remote environments.
ADMIN_EMAIL=CHANGE_ME_ADMIN_EMAIL
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
ADMIN_FULL_NAME=CHANGE_ME_ADMIN_FULL_NAME

# Site
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Revalidation
REVALIDATION_SECRET=CHANGE_ME_REVALIDATION_SECRET

# CI/CD (GitHub Actions secrets, not application runtime env vars)
# Set these in GitHub repository secrets for the production release workflow.
# SUPABASE_DB_URL=postgresql://postgres:<password>@db.<project-ref>.supabase.co:5432/postgres?sslmode=require
# VERCEL_DEPLOY_HOOK_URL=https://api.vercel.com/v1/integrations/deploy/<deployment-hook-id>
# NEXT_PUBLIC_SUPABASE_URL=https://<project-ref>.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=<anon-key>
# NEXT_PUBLIC_SITE_URL=https://your-production-domain.com
